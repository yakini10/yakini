FROM ubuntu:22.04 AS builder

RUN apt-get update && apt-get install -y \
    build-essential \
    libreadline-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

RUN make clean && make

FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    libreadline8 \
    sudo \
    fdisk \
    util-linux \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/kubsh /usr/local/bin/kubsh

RUN useradd -m -s /bin/bash testuser

WORKDIR /root

CMD ["kubsh"]
